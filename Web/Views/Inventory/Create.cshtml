@model Models.Inventory

@{
    ViewData["Title"] = "Add New Product";
}

<h1>Add New Product</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreNumber" class="control-label"></label>
                <select asp-for="StoreNumber" class="form-control">
                    @foreach (var item in ViewData["stores"] as IEnumerable<Models.Storefront>)
                    {
                        <option value="@item.StoreNumber">@item.StoreName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Prod.ProdName" class="control-label"></label>
                <input asp-for="Prod.ProdName" class="form-control" />
                <span asp-validation-for="Prod.ProdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prod.ProdPrice" class="control-label"></label>
                <input asp-for="Prod.ProdPrice" class="form-control" />
                <span asp-validation-for="Prod.ProdPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prod.ProdDescription" class="control-label"></label>
                <input asp-for="Prod.ProdDescription" class="form-control" />
                <span asp-validation-for="Prod.ProdDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prod.ProdCategory" class="control-label"></label>
                <input asp-for="Prod.ProdCategory" class="form-control" />
                <span asp-validation-for="Prod.ProdCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
