@{
}

@model Models.SOrder

<h1>Order Details</h1>
<div class="card">
    <address class="card-body">
        <p>
            @Html.DisplayFor(o => o.StoreNumberNavigation.StoreName)<br />
            @Html.DisplayFor(o => o.StoreNumberNavigation.StoreAddress)<br />
        </p>
    </address>
</div>
<div class="card">
    <address class="card-body">
        <p>
            @Html.DisplayFor(o => o.CustNumberNavigation.CustName)<br />
            @Html.DisplayFor(o => o.CustNumberNavigation.CustAddress)<br />
            @Html.DisplayFor(o => o.CustNumberNavigation.CustEmail)<br />
            @Html.DisplayFor(o => o.CustNumberNavigation.CustPhone)<br />
        </p>
    </address>
</div>
<div class="card">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        @foreach (var item in Model.LineItems)
        {
    <tr>
        <td>@Html.DisplayFor(i => item.ProdId)</td>
        <td>@Html.DisplayFor(i => item.Prod.ProdName)</td>
        <td>@Html.DisplayFor(i => item.Prod.ProdPrice)</td>
        <td>@Html.DisplayFor(i => item.Quantity)</td>
    </tr>
        }
        <tr>
            <td>Total: @Html.DisplayFor(o => o.TotalPrice)</td>
        </tr>
    </table>
</div>