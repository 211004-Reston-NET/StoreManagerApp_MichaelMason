@model Models.LineItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LineItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LineId" />
            <div class="form-group">
                <label asp-for="OrderId" class="control-label"></label>
                <select asp-for="OrderId" class="form-control">
                    @foreach (var item in ViewData["orders"] as IEnumerable<Models.SOrder>)
                    {
                        <option value="@item.OrderId">@item.OrderId</option>
                    }
                </select>                
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdId" class="control-label"></label>
                <select asp-for="ProdId" class="form-control">
                    @foreach (var item in ViewData["products"] as IEnumerable<Models.Product>)
                    {
                        <option value="@item.ProdId">@item.ProdName</option>
                    }
                </select>                
                <span asp-validation-for="ProdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
